{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "ignorePatterns": ["reportWebVitals.js"],
    "rules": {
        "linebreak-style": 0,
        "object-curly-spacing": [2, "never"],
        "max-len": [2, {"code": 120, "ignorePattern": "^import"}],
        "max-lines": ["error", 300],
        "no-trailing-spaces": 0,
        "quotes": [2, "double"],
        "space-infix-ops": ["error", { "int32Hint": false }]
    }
}